<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add medication"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:textSize="30sp"/>


        <EditText
            android:id="@+id/editTextAddPillName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:hint="Enter pill's name" />

    <Button
            android:id="@+id/btnDateBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:onClick="onClickDateBegin"
            android:text="Enter date of begin"
            android:inputType="date"/>

        <Button
            android:id="@+id/btnDateEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Enter date of end"
            android:onClick="onClickDateEnd"
            android:layout_marginBottom="20dp"
            android:inputType="date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of medication"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>


        <Button
            android:id="@+id/addPillBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add time"
            android:onClick="onClickAddTime"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medication schedule:"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="92dp">


            <RadioButton
                android:id="@+id/radioButtonEveryDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every day" />

            <RadioButton
                android:id="@+id/radioButtonWithBreaks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="With breaks" />


        </RadioGroup>

    <EditText
        android:id="@+id/editTextBreaks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter count of days without breaks"
        android:layout_marginBottom="30dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonPillOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="onClickOKPill"
        android:text="OK" />

        </LinearLayout>
</ScrollView>

